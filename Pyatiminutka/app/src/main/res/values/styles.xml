<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccentDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorMainText">@color/black</item>
        <item name="colorSecondaryText">@color/text_default</item>
        <item name="colorBackgroundBlocks">@color/white</item>
        <item name="colorDivider">@color/silver</item>



        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorMainText">@color/white</item>
        <item name="colorSecondaryText">@color/colorText2Night</item>
        <item name="colorBackgroundBlocks">@color/colorBackgroundBlocks</item>
        <item name="android:windowBackground">@color/colorBackgroundBlack</item>
    </style>


    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PrimaryText" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThirdText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorSecondaryText</item>
    </style>


    <style name="ToolBarStyle" parent="">
    </style>

    <style name="Twice_title_Text" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Third_title_Text" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Style" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Wrong_answers" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="StatusBarColor1">
        <item name="colorBackgroundBlocks">@color/background2</item>
    </style>

    <style name="StatusBarColor2">
        <item name="colorBackgroundBlocks">@color/colorPrimary</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">?attr/colorMainText</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="paddingEnd">0dp</item>
    </style>

    <style name="Block_of_info">
        <item name="android:background">@drawable/rounded_corners4</item>
        <item name="android:elevation">@dimen/shadow_two</item>
    </style>

    <style name="Button_block">
        <item name="android:background">@drawable/rounded_corners4</item>
        <item name="android:elevation">@dimen/shadow</item>
    </style>

    <style name="Theme.Scroll.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Scroll.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:elevation">@dimen/shadow</item>
    </style>



</resources>