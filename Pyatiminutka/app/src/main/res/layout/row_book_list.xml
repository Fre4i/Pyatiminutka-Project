<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/activity_padding"
    android:paddingTop="@dimen/activity_padding">

    <!-- Defining where should text be placed. You set you text color here-->


    <TextView
        android:id="@+id/text_view31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="Электродинамика"
        android:textColor="?attr/colorText"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/book_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:tint="?attr/colorText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_view31"
        android:layout_marginHorizontal="6dp"
        android:background="?attr/colorText2" />
</RelativeLayout>